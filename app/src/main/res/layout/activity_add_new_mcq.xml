<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".AddNewMcqActivity">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-60dp"
            android:src="@drawable/top_background_1"></ImageView>

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:indeterminate="true"
            android:visibility="gone"
            android:layout_height="wrap_content" />


        <EditText
            android:id="@+id/etQuestion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_margin="10dp"
            android:background="@drawable/edit_text_background"
            android:padding="10dp"
            android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            android:hint="@string/question"
            android:inputType="textMultiLine"
            android:lines="4"
            android:gravity="start|top"

            />
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#C2CFF1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                    <EditText
                        android:id="@+id/etOptionA"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:ems="10"
                        android:hint="@string/option_a"
                        android:padding="10dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etOptionB"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:ems="10"
                        android:hint="@string/option_b"
                        android:padding="10dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etOptionC"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:ems="10"
                        android:hint="@string/option_c"
                        android:padding="10dp"
                        android:inputType="textPersonName" />

                    <EditText
                        android:id="@+id/etOptionD"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/white"
                        android:layout_marginTop="@dimen/fab_margin"
                        android:ems="10"
                        android:hint="@string/option_d"
                        android:padding="10dp"
                        android:inputType="textPersonName" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardUseCompatPadding="true"
            android:layout_margin="8dp"
            app:cardElevation="8dp"
            app:cardCornerRadius="15dp"
            app:cardBackgroundColor="#F1C2AA">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="10dp"
                >

                <EditText
                    android:id="@+id/etCorrectOption"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:ems="10"
                    android:hint="@string/correct_answer"
                    android:padding="10dp"
                    android:inputType="textPersonName" />

                <EditText
                    android:id="@+id/etWeightage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:ems="10"
                    android:hint="@string/weight_default_value_1"
                    android:padding="10dp"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etUnitNumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:ems="10"
                    android:hint="@string/unit_number"
                    android:padding="10dp"
                    android:inputType="number" />

                <EditText
                    android:id="@+id/etTopic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/fab_margin"
                    android:ems="10"
                    android:hint="@string/topic_name"
                    android:padding="10dp"
                    android:inputType="textPersonName" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>